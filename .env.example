# 统计代码配置
# 复制此文件为 .env.local 并填入你的统计ID

# Google Analytics (国外用户)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# 百度统计 (国内用户)
NEXT_PUBLIC_BAIDU_ID=xxxxxxxxxxxxxxxx

# Umami 自建统计 (隐私友好)
NEXT_PUBLIC_UMAMI_ID=your-website-id
NEXT_PUBLIC_UMAMI_URL=https://your-umami-domain.com/umami.js
NEXT_PUBLIC_UMAMI_DOMAINS=yourdomain.com,localhost:3000

# 启用统计（可选，默认启用）
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# 开发环境是否启用统计（可选）
NEXT_PUBLIC_DEV_ANALYTICS=false